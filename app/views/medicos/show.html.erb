<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @medico.nome %>
</p>

<p>
  <strong>Cpf:</strong>
  <%= @medico.cpf %>
</p>

<p>
  <strong>Email:</strong>
  <%= @medico.email %>
</p>

<p>
  <strong>Especialidade:</strong>
  <%= @medico.especialidade %>
</p>

<p>
  <strong>Crm:</strong>
  <%= @medico.crm %>
</p>

<table>
  <h2>Consultas agendadas</h2>
  <thead>
  <tr>
    <th>Hora</th>
    <th>Data</th>
    <th>Paciente</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @medico.consultums.each do |consultum| %>
    <tr>
      <td><%= consultum.hora %></td>
      <td><%= consultum.data %></td>
      <td><%= consultum.paciente.nome %></td>
    </tr>
  <% end %>
  </tbody>
</table>

